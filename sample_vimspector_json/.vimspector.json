{
	"configurations": {
		"default debug": {
			"adapter": "debugpy",
			"configuration": {
				// modify here
				"python": "./run.sh", // exe path
				"args": ["*${CommandLineArgs}"],
				"program": "${file}",
				// modify here

				"request": "launch",
				"type": "python",
				"cwd": "${workspaceRoot}",
				"stopOnEntry": true,
				"console": "integratedTerminal"
			},
			"breakpoints": {
				"exception": {
					"raised": "N",
					"uncaught": ""
				}
			}
		}
	}
}
